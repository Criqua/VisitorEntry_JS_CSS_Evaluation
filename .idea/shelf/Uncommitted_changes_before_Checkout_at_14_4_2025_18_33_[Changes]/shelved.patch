<+>/* Reseteo básico */\r\n* {\r\n    margin: 0;\r\n    padding: 0;\r\n    box-sizing: border-box;\r\n}\r\n\r\nbody {\r\n    font-family: 'Poppins', 'Helvetica Neue', Arial, sans-serif;\r\n    font-size: 16px;\r\n    background: linear-gradient(135deg, #f0f0f0, #ffffff);\r\n    color: #333;\r\n    line-height: 1.6;\r\n    padding: 30px;\r\n}\r\n\r\n\r\nheader {\r\n    background: linear-gradient(90deg, #283048, #859398);\r\n    color: #fff;\r\n    padding: 30px 0;\r\n    text-align: center;\r\n    box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);\r\n}\r\n\r\nheader h1 {\r\n    font-size: 32px;\r\n    letter-spacing: 1px;\r\n    text-shadow: 1px 1px 3px rgba(0,0,0,0.2);\r\n}\r\n\r\nsection {\r\n    background: #fff;\r\n    margin-top: 30px;\r\n    padding: 30px;\r\n    border-radius: 8px;\r\n    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);\r\n}\r\n\r\n#visitorRegistryForm {\r\n    max-width: 700px;\r\n    margin: 0 auto;\r\n}\r\n\r\n.input-group {\r\n    margin-bottom: 20px;\r\n}\r\n\r\n.input-group label {\r\n    display: block;\r\n    font-weight: 600;\r\n    margin-bottom: 8px;\r\n    color: #555;\r\n}\r\n\r\n\r\n.input-group input,\r\n.input-group select,\r\n.input-group textarea {\r\n    width: 100%;\r\n    padding: 12px 15px;\r\n    border: 1px solid #ddd;\r\n    border-radius: 6px;\r\n    font-size: 16px;\r\n    transition: all 0.3s ease;\r\n}\r\n\r\n/* Resalta el campo activo con color y sombra */\r\n.input-group input:focus,\r\n.input-group select:focus,\r\n.input-group textarea:focus {\r\n    outline: none;\r\n    border-color: #6c63ff;\r\n    box-shadow: 0 0 8px rgb(69, 64, 156);\r\n}\r\n\r\n/* Botón de envío con degradado y bordes redondeados para un toque innovador */\r\n.post-button {\r\n    text-align: center;\r\n    margin-top: 30px;\r\n}\r\n\r\n.post-button button {\r\n    background: linear-gradient(90deg, #6c63ff, #3f3d56);\r\n    color: #fff;\r\n    border: none;\r\n    padding: 15px 30px;\r\n    font-size: 18px;\r\n    border-radius: 30px;\r\n    cursor: pointer;\r\n    transition: background 0.3s ease;\r\n}\r\n\r\n.post-button button:hover {\r\n    background: linear-gradient(90deg, #3f3d56, #6c63ff);\r\n}\r\n\r\n/* Sección de lista de visitantes con títulos destacados */\r\n#visitorListSection {\r\n    margin-top: 50px;\r\n}\r\n\r\n#visitorListSection h2 {\r\n    text-align: center;\r\n    margin-bottom: 25px;\r\n    font-size: 28px;\r\n    color: #333;\r\n}\r\n\r\n/* Tabla de visitantes con celdas amplias y filas alternadas para mejor legibilidad */\r\n#visitorListTable {\r\n    width: 100%;\r\n    border-collapse: collapse;\r\n}\r\n\r\n#visitorListTable th,\r\n#visitorListTable td {\r\n    padding: 15px;\r\n    border: 1px solid #eee;\r\n    text-align: left;\r\n}\r\n\r\n#visitorListTable th {\r\n    background: #6c63ff;\r\n    color: #fff;\r\n    font-size: 16px;\r\n    text-transform: uppercase;\r\n    letter-spacing: 0.5px;\r\n}\r\n\r\n#visitorListTable tr:nth-child(even) {\r\n    background-color: #f9f9f9;\r\n}\r\n\r\n/* Pie de página con línea divisoria y estilo minimalista */\r\nfooter {\r\n    text-align: center;\r\n    margin-top: 30px;\r\n    font-size: 14px;\r\n    color: #777;\r\n    border-top: 1px solid #eee;\r\n    padding-top: 15px;\r\n}\r\n
